<recipeml version="0.5">
  <recipe>
    <head>
      <title>Hefeklöße</title>
    </head>
    <ingredients>
      <ing>
        <amt><qty>500</qty><unit>g</unit></amt>
        <item>Mehl</item>
      </ing>
      <ing>
        <amt><qty>2</qty><unit>Päckchen</unit></amt>
        <item>Trockenhefe</item>
      </ing>
      <ing>
        <amt><qty>1</qty><unit>Prise</unit></amt>
        <item>Zucker</item>
      </ing>
      <ing>
        <amt><qty>1</qty><unit>Prise</unit></amt>
        <item>Salz</item>
      </ing>
      <ing>
        <amt><qty>250</qty><unit>ml</unit></amt>
        <item>lauwarme Milch</item>
      </ing>
      <ing>
        <amt><qty>25</qty><unit>g</unit></amt>
        <item>weiche Butter</item>
      </ing>
    </ingredients>
    <directions>
      <step>Mehl mit Trockenhefe, Butter, Zucker und Salz zu Teig verkneten</step>
      <step>Teig abgedeckt an warmem Ort 30 min gehen lassen</step>
      <step>10-12 Klöße formen und abgedeckt nochmal 10 min gehen lassen</step>
      <step>Klöße 10-12 Minuten über Wasserdampf garen</step>
    </directions>
  </recipe>
</recipeml>
